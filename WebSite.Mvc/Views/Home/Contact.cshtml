@using WebSite.Mvc.Helpers
@{
    ViewBag.Title = "Amortizacion Anual";
}
<h2>@ViewBag.Title.</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                N.
            </th>
            <th>
                Capital Inicial
            </th>
            <th>
                Capital Pagado
            </th>
            <th>
                Saldo
            </th>
        </tr>
@foreach (var d in (ViewBag.Tabla as List<AmortizacionMensual>))
{
        <tr>
            <td>
                @d.Numero
            </td>
            <td>
                @d.PagoInicial
            </td>
            <td>
                @d.CapitalPagado
            </td>
            <td>
                @d.Saldo
            </td>
        </tr>
}
    </thead>
</table>